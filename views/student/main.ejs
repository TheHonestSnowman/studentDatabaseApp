<% include ../partials/header %>  <!-- include header template -->

<div class = "container">
    <header class="jumbotron" style="background: white;">
            <h1>Student Grade Profiles</h1>
    </header>
    
    <div class = "row text-center" style="display: flex; flex-wrap: wrap;">
  
        <!-- forEach loop to create profile for each record from the database -->
        
        <% students.forEach(function(student){ %>
        <div class ="col-md-3 col-sm-6">    
            <div class="thumbnail">
                <img src ="<%= student.image %>">
                <div class="caption">
                    <h4><%=student.studentID%></h4>
                </div>
                <p>
                    <a href="/student/<%= student._id %>" class="btn btn-primary">More info</a>
                </p>
            </div>
        </div>
        <% }); %>
        
   </div>
</div>


<% include ../partials/footer %> <!-- include footer template -->