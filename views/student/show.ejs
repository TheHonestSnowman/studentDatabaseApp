                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= student.unitTwo %>%;">
                        <%= student.unitTwo %>%
                    </div>
                </div>   
            </div>
        
            <div class="progress-custom">
                <h4>Unit Three</h4>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= student.unitThree %>%;">
