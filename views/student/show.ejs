<% include ../partials/header %> <!-- include header template -->


    <div class="row col-sm-12">
        <div class="col-sm-6 col-sm-offset-3 profile">
            
            <div class="col-sm-6 text-center" >
                <img src ="<%= student.image %>">
                <h3><%= student.studentID %></h3>
            </div>
            
